# Aliases
alias xx='explorer.exe'
alias vc='cmd.exe /c code . &'

# Functions
rmbop () {
  if [[ $(pwd) == /home/* ]] || [[ $(pwd) == /mnt/c/Users/* ]]; then
    find . \( -name bin -o -name obj -o -iname packages \) -exec rm -rf {} \;
  fi
}

# Path
path+=(
  '/mnt/c/Windows/System32'
  '/mnt/c/Windows'
  '/mnt/c/Windows/System32/WindowsPowerShell/v1.0/'
)

